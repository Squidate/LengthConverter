    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        try{
            DecimalFormat df = new DecimalFormat("#.#");
        String input = jTextField1.getText();
        double intput = Integer.parseInt(input);
        double conv;
        
        
        if(jComboBox1.getSelectedItem().toString()=="Miles"&&jComboBox2.getSelectedItem().toString()=="Kilometers"){
            conv = (intput * 1.6);
            jTextField2.setText(df.format(conv) + "");
        } else if(jComboBox1.getSelectedItem().toString()=="Kilometers"&&jComboBox2.getSelectedItem().toString()=="Miles"){
            conv = (intput * 0.6);
            jTextField2.setText(df.format(conv) + "");
        }else if(jComboBox1.getSelectedItem().toString()=="Kilometers"&&jComboBox2.getSelectedItem().toString()=="Kilometers"){
            jTextField2.setText(df.format(intput) + "");
        }else if(jComboBox1.getSelectedItem().toString()=="Miles"&&jComboBox2.getSelectedItem().toString()=="Miles"){
            jTextField2.setText(df.format(intput) + "");
        }
    } catch(Exception e){
        System.out.println("please enter integer.");
    }
    }                                        

